<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/main_view"
    tools:context="com.example.win7.fyp.regulation1"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="right"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Ketidakhadiran"
            android:id="@+id/num1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:layout_alignBottom="@+id/etNum1"
            android:layout_toLeftOf="@+id/bUpdate"
            android:layout_toStartOf="@+id/bUpdate"
            android:textColor="#FFBE80FF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etNum1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/num1"
            android:layout_toRightOf="@+id/num1" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/calcBut"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="onCalcClick"
            android:textColor="#FFBE80FF"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num2"
            android:layout_below="@+id/num1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:text="Amount Contact Hour"
            android:layout_toLeftOf="@+id/etNum1"
            android:layout_toStartOf="@+id/etNum1"
            android:textColor="#FFBE80FF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etNum2"
            android:layout_below="@+id/etNum1"
            android:layout_toRightOf="@+id/num1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAns"
            android:layout_below="@+id/etNum2"
            android:layout_toRightOf="@+id/num2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>
